<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pooja.foodmgmt.Login"
    android:id="@+id/layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#1b308f"
        android:textStyle="bold"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are a "
        android:id="@+id/textView"
        android:textSize="15dp"
        android:textColor="#204078"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="3dp"
        android:layout_weight=".28"
        android:background="@drawable/background_spinner"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/type"
            android:spinnerMode="dropdown">
        </Spinner>



    </RelativeLayout>



</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:hint="Email"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textSize="15dp"
        android:textColor="#204078"  />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/invalid_email"
        android:textColor="#ff0000" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:hint="Password"
            android:maxLines="1"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="#204078"  />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/invalid_password"
            android:textColor="#ff0000" />

    </LinearLayout>

    <Button
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/login"
           android:text="Login"
           android:layout_below="@+id/password"
           android:layout_alignLeft="@+id/type"
           android:layout_alignStart="@+id/type"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/highlighted_text_material_dark"
        android:textColor="#204078"
        android:textSize="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Account yet?...Register here."
        android:id="@+id/register_here"
        android:textSize="15dp"
        android:textColor="#204078"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:hint="dgdgd" />


</LinearLayout>
